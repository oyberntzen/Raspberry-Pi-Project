	RelativeLayout:
		Image:
            id: timeplan
            source: "timeplan.png"
            allow_stretch: True
	
	RelativeLayout:
		Image:
            id: lekser
            source: "lekser.png"
            allow_stretch: True
            
    RelativeLayout:
        id:  mail0
        
